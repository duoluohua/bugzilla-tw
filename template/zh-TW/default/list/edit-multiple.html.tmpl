<script type="text/javascript">
  var numelements = document.forms.changeform.elements.length;
  function SetCheckboxes(value) {
      var item;
      for (var i=0 ; i<numelements ; i++) {
          item = document.forms.changeform.elements[i];
          item.checked = value;
      }
  }
  document.write(' <input type="button" name="uncheck_all" value="全不選" onclick="SetCheckboxes(false);">');
  document.write(' <input type="button" name="check_all" value=" 全選" onclick="SetCheckboxes(true);">');
</script>

